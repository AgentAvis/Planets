In the players step:
	//red
	global.RedOpenC = false
	if place_meeting(x,y,oRedSwitch) and keyboard_check_pressed(ord('E')) {
	global.RedOpen = !global.RedOpen;
	global.RedOpenC = true
	}
In the button step:

	if global.RedOpen = true {
	Open = true
	image_index = 0
	} else {
	Open = false
	image_index = 1
	}
In the door step:
	if global.RedOpenC = true {if Open = true { Open = false} else { Open = true }} 
	
	ScOpen()

In ScOpen():
	if Open = true {

	if image_angle = 0 {if x < origx + 32 {x = x + 1}}
	if image_angle = 90 {if y > origy - 32 {y = y - 1}}
	if image_angle = 180 {if x > origx - 32 {x = x - 1}}
	if image_angle = 270 {if y < origy + 32 {y = y + 1}}
	}

	if Open = false {
		
	if image_angle = 0 {if x > origx {x = x - 1}}
	if image_angle = 90 {if y < origy {y = y + 1}}
	if image_angle = 180 {if x < origx {x = x + 1}}
	if image_angle = 270 {if y > origy {y = y - 1}}
		}
